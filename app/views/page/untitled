:javascript

  $('.gm1').hover(
    function(){
    $('.gm1-text, .gm2-text, .gm3-text, .gm4-text').hide();
      $('.gm1-text').fadeToggle('slow');
    });

  $('.gm2').hover(
    function(){
      $('.gm1-text, .gm2-text, .gm3-text, .gm4-text').hide();
      $('.gm2-text').fadeToggle('slow');
    });

  $('.gm3').hover(
    function(){
    $('.gm1-text, .gm2-text, .gm3-text, .gm4-text').hide();
      $('.gm3-text').fadeToggle('slow');
    });

  $('.gm4').hover(
    function(){
    $('.gm1-text, .gm2-text, .gm3-text, .gm4-text').hide();
      $('.gm4-text').fadeToggle('slow');
    });

  $('.bm1').hover(
    function(){
      $('.bm1-text, .bm2-text, .bm3-text, .bm4-text').hide();
      $('.bm1-text').fadeToggle('slow');
    });

  $('.bm2').hover(
    function(){
      $('.bm1-text, .bm2-text, .bm3-text, .bm4-text').hide();
      $('.bm2-text').fadeToggle('slow');
    });

  $('.bm3').hover(
    function(){
      $('.bm1-text, .bm2-text, .bm3-text, .bm4-text').hide();
      $('.bm3-text').fadeToggle('slow');
    });

  $('.bm4').hover(
    function(){
      $('.bm1-text, .bm2-text, .bm3-text, .bm4-text').hide();
      $('.bm4-text').fadeToggle('slow');
    }); 
    
  
  $( ".groomsmen-link" ).click(function(e) {
    e.preventDefault();
    $('.bridesmaid').hide();
    $('.bridesmaid-link, .groomsmen-link').hide();
    $( ".groomsmen" ).slideDown( "slow", function() {
    });
  });

  $( ".bridesmaid-link" ).click(function(e) {
    e.preventDefault();
    $('.groomsmen').hide();
    $('.bridesmaid-link, .groomsmen-link').hide();
    $( ".bridesmaid" ).slideDown( "slow", function() {
    });
  });

  


  
  $('.brides-side-link').click(function(e){
    e.preventDefault();
    $('.groomsmen, .gm1-text, .gm2-text, .gm3-text, .gm4-text').hide();
    $( ".bridesmaid" ).slideDown( "slow", function() {
    });
  });

  $('.grooms-side-link').click(function(e){
    e.preventDefault();
    $('.bridesmaid, .bm1-text, .bm2-text, .bm3-text, .bm4-text').hide();
    $( ".groomsmen" ).slideDown( "slow", function() {
    });
  });
  
  
  